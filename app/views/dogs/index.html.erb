<div class="page-header">
  <h1>
    Your Awesome Dogs
    <a href="/dogs/new" class="btn btn-lg btn-info">More Dogs!</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Portrait</th>
        <th>Name</th>
        <th>Dob</th>
        <th>Breed</th>
        <th>Consumption per day (cups)</th>
        <!-- <th>Owner</th> -->
        <th>Actions</th>
      </tr>

      <% @dogs.each do |dog| %>
      <tr>
        <td><img src="<%= dog.picture_url %>" width="200"></td>
        <td><%= dog.name %></td>
        <td><%= dog.dob %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.consumption_per_day %></td>
        <!-- <td><%= dog.user_id%></td> -->

        <td>
          <a href="/dogs/<%= dog.id %>" class="btn btn-default">Show</a>
          <a href="/dogs/<%= dog.id %>/edit" class="btn btn-default">Edit</a>
          <a href="/delete_dog/<%= dog.id %>" class="btn btn-default" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
