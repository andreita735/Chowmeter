<!-- Validation failure messages -->
<% if @dog.errors.any? %>
  <% @dog.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add a Dog</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_dog" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @dog.name %>">
      </div>

      <!-- Label and input for dob -->
      <div class="form-group">
        <label for="dob" class="control-label">
          Dob
        </label>

        <input type="text" id="dob" name="dob" placeholder="Dob" class="form-control" value="<%= @dog.dob %>">
      </div>

      <!-- Label and input for breed -->
      <div class="form-group">
        <label for="breed" class="control-label">
          Breed
        </label>

        <input type="text" id="breed" name="breed" placeholder="Breed" class="form-control" value="<%= @dog.breed %>">
      </div>

      <!-- Label and input for consumption_per_day -->
      <div class="form-group">
        <label for="consumption_per_day" class="control-label">
          Consumption (cups) per day
        </label>

        <input type="text" id="consumption_per_day" name="consumption_per_day" placeholder="Consumption per day" class="form-control" value="<%= @dog.consumption_per_day %>">
      </div>

      <!-- Label and input for image_url -->
      <div class="form-group">
        <label for="image_url" class="control-label">
          Picture url
        </label>

        <input type="text" id="picture_url" name="picture_url" placeholder="Picture url" class="form-control" value="<%= @dog.picture_url %>">
      </div>

      <!-- Hidden input for user_id -->
<input type="hidden" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-info">
        Add Dog!
      </button>
      or
      <a href="/dogs">Cancel</a>
    </form>
  </div>
</div>
